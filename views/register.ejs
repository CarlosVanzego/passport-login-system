<h1>Register</h1>
<form action="/register" method="POST"> <!-- Registration form -->
    <div>
     <label for="name">Name</label>
     <input type="text" id="name" name="name" required> <!-- Name input field -->
    </div>
    <div>
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required> <!-- Email input field -->
     </div>
     <div>
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required> <!-- Password input field -->
     </div>
     <button type="submit">Register</button> <!-- Register button -->
</form>
<a href="/login">Login</a> <!-- Link to login page -->